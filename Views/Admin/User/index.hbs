<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">User</h1>
<p class="mb-4">Trang dùng để chỉnh sửa thông tin người dùng </p>
<!-- DataTales Example -->
<a href="/auth/register" class="btn btn-success btn-icon-split mb-2">
    <span class="icon text-white-50">
        <i class="fas fa-plus"></i>
    </span>
    <span class="text">Tạo user</span>
</a>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách người dùng</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each list_User}}
                    <tr>
                        <td>{{Name}}</td>
                        <td>{{Email}}</td>
                        <td><a href="/admin/user/edit/{{ID}}"><i class="fa fa-edit"></i></a>
                            <form method="POST" action="/admin/user/delete">
                                <input type="hidden" value="{{ID}}" name="ID" />
                                <button type="submit"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>