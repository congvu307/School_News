<form method="POST" action="/admin/loai-tin/add">
    <div class="form-group">
        <label>Tên</label>
        <input oninput="$('#TenKhongDau').val(change_alias($(this).val()));" type="text" class="form-control"
            name="Ten" />
    </div>

    <div class="form-group">
        <label>Tên Không Dấu</label>
        <input type="text" id="TenKhongDau" readonly class="form-control" name="TenKhongDau" />
    </div>

    <div class="form-group">
        <label>Thể loại</label>
        <select class="form-control" name="the_loai_ID">
            {{#each list_theloai}}
            <option value="{{ID}}">{{Ten}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>

</form>