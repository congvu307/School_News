
{{#with loaitin}}

<form method="POST" action="/admin/loai-tin/add">
    <input type="hidden" name="ID" value="{{ID}}" id="">
    <div class="form-group">
        <label>Tên</label>
        <input oninput="$('#TenKhongDau').val(change_alias($(this).val()));" value="{{Ten}}" type="text" class="form-control"
            name="Ten" />
    </div>

    <div class="form-group">
        <label>Tên Không Dấu</label>
        <input type="text" id="TenKhongDau" readonly class="form-control" value="{{TenKhongDau}}" name="TenKhongDau" />
    </div>

    <div class="form-group">
        <label>Thể loại</label>
        <select class="form-control" name="the_loai_ID">
            {{#each ../theloai}}
            <option value="{{ID}}">{{Ten}}</option>
            {{/each}}
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>

</form>
{{/with}}