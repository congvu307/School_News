
<form method="POST" action="/admin/the-loai/add">
    <div class="form-group">
        <label>Tên</label>
        <input oninput="$('#TenKhongDau').val(change_alias($(this).val()));" type="text" class="form-control" name="Ten"/>
    </div>

    <div class="form-group">
        <label>Tên Không Dấu</label>
        <input type="text" id="TenKhongDau" readonly class="form-control"  name="TenKhongDau"/>
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>

</form>