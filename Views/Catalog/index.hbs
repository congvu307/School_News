<div class="row">
    <div class="col-md-3 ">
        <ul class="list-group" id="menu">
            <li href="#" class="list-group-item menu1 active">
                Menu
            </li>

            {{#each menu}}
            <li href="#" class="list-group-item menu1">
                {{Ten}}
            </li>
            <ul>
                {{#each LoaiTin}}
                <li class="list-group-item">
                    <a href="/loai-tin/{{../TenKhongDau}}/{{TenKhongDau}}">{{Ten}}</a>
                </li>
                {{/each}}
            </ul>
            {{/each}}

        </ul>
    </div>

    <div class="col-md-9 ">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:#337AB7; color:white;">
                <h4><b>Panel heading without title</b></h4>
            </div>
            {{#each list_blog}}
            <div class="row-item row">
                <div class="col-md-3">

                    <a  href="/tin-tuc/{{TieuDeKhongDau}}">
                        <br>
                        <img width="200px" height="200px" class="img-responsive" src="/upload/feature/{{Hinh}}"alt="">
                    </a>
                </div>

                <div class="col-md-9">
                    <h3><a  href="/tin-tuc/{{TieuDeKhongDau}}">{{TieuDe}}</a></h3>
                    <p>{{TomTat}}</p>
                    <a class="btn btn-primary" href="/tin-tuc/{{TieuDeKhongDau}}">View Project <span
                            class="glyphicon glyphicon-chevron-right"></span></a>
                </div>
                <div class="break"></div>
            </div>
            {{else}}
            <p class="text-center">Không có bài viết nào</p>
            {{/each}}


            <!-- Pagination -->
            <div class="row text-center">
                <div class="col-lg-12">
                    <ul class="pagination">
                        <li>
                            <a href="#">&laquo;</a>
                        </li>
                        {{#each page_number}} {{#if isCurrentPage}}
                        <li class="active">
                            <a href="#">{{value}}</a>
                        </li>
                        {{else}}
                        <li>
                            <a href="/loai-tin/{{../the_loai}}/{{../loai_tin}}?page={{value}}">{{value}}</a>
                        </li>
                        {{/if}} {{/each}}

                        <li>
                            <a href="#">&raquo;</a>
                        </li>
                    </ul>
                </div>
            </div>
            <!-- /.row -->

        </div>
    </div>

</div>